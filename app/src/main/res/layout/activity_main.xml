<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    tools:context="com.example.harshgupta.find_it.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:text="46 Above"
        android:id="@+id/textView6"
        android:layout_height="40dp"
        android:layout_width="180dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:textColor="#0000ff"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:layout_height="100dp"
        android:id="@+id/imageButton7"
        android:layout_width="100dp"
        app:srcCompat="@mipmap/old"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton14"
        android:layout_alignStart="@+id/imageButton14" />

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@mipmap/adult"
        android:id="@+id/imageButton14"
        android:layout_width="100dp"
        android:layout_above="@+id/imageButton7"
        android:layout_alignLeft="@+id/imageButton13"
        android:layout_alignStart="@+id/imageButton13"
        android:layout_marginBottom="23dp" />

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@mipmap/teen"
        android:id="@+id/imageButton13"
        android:layout_width="100dp"
        android:layout_above="@+id/imageButton14"
        android:layout_alignLeft="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton9"
        android:layout_marginBottom="25dp" />

    <TextView
        android:text="16 - 30 yrs"
        android:id="@+id/textView8"
        android:layout_width="180dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:textColor="#0000ff"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_height="40dp"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/imageButton13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="30 - 45 yrs"
        android:id="@+id/textView9"
        android:layout_height="40dp"
        android:layout_width="180dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:textColor="#0000ff"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_alignBottom="@+id/imageButton14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:text="8 - 15 yrs"
        android:id="@+id/textView7"
        android:layout_height="40dp"
        android:layout_width="180dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="24sp"
        android:textColor="#0000ff"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_alignBottom="@+id/imageButton9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:layout_height="100dp"
        app:srcCompat="@mipmap/child"
        android:id="@+id/imageButton9"
        android:layout_width="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />


</RelativeLayout>
